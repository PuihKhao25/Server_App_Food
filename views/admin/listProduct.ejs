<div>
  <h2>List Product <br>
  </h2>
  <br>
</div>
<table id="example" class="table table-striped table-bordered" >
  <thead class="theadTable">
    <tr>
      <th style="width: 3%;">STT</th>
      <th style="width: 15%;">Tên sản phẩm</th>
      <th style="width: 17%;">Hình ảnh</th>
      <th style="width: 5%;">Price</th>
      <th style="width: 10%;">Loại sản phẩm</th>
      <th style="width: 22%;">Nội dung</th>
      <th style="width: 18%;">Action</th>
    </tr>
  </thead>
  <tbody>
    <% for( var i = 0; i < danhsach.length; i++){ %>
      <tr>
        <td class="centerTD"> <%= i+1 %></td>
        <td> <%= danhsach[i].name %></td>
        <td class="centerTD">
          <img src="<%= danhsach[i].img %>" alt="" class="imgProduct" >
        </td>
        <td><%= danhsach[i].price %></td>
        <td><%= danhsach[i].category %></td>
        <td><%= danhsach[i].description %></td>
        <td class="bt"> 
          <button type="button" class="btn btn-info" >
            <i class="fas fa-pencil-alt"></i>
            <a href="./edit-product/<%= danhsach[i]._id%>">Edit</a>
          </button>
          <button type="button" class="btn btn-danger" >
            <i class="fas fa-trash"> </i>
            Delete
          </button>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>