<div>
    <div class="container-fluid">
        <h2>Edit sản phẩm</h2>
    </div>
    <section >
        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-info">
                    <form action="">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputName">Tên sản phẩm</label>
                                <input type="tensp" name="tensp" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên sản phẩm" style="width: 50%;">
                            </div>
                            <div class="form-group">
                                <label>Danh mục</label>
                                <select class="form-control select2" style="width: 50%;">
                                    <option selected="selected">Chọn</option>
                                    <option>Đồ ăn </option>
                                    <option>Đồ uống</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Loại sản phẩm</label>
                                <select class="form-control select2" style="width: 50%;">
                                    <option selected="selected">Chọn</option>
                                    <option>Nổi bật</option>
                                    <option>Không nổi bật</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Chọn ảnh</label>
                                <div class="input-group" style="width: 50%;">
                                  <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="exampleInputFile">
                                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                  </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Nội dung</label>
                                <textarea name="description" id="your_summernote" class="form-control" ></textarea>
                            </div>
                            <div class="form-group">
                                <center><button  style="width: 150px; background:#3498db;border-radius: 12px;">Save</button></center>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
